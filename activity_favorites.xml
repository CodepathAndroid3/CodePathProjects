<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--Header-->
    <TextView
        android:id="@+id/favHeader"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Favorites"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <!--Movie/Show Image-->
    <ImageView
        android:id="@+id/profImage"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="60dp"
        tools:srcCompat="@tools:sample/avatars" />

    <!--Movie/Show Title-->
    <TextView
        android:id="@+id/favTitle"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="0dp"
        android:layout_toEndOf="@+id/profImage"
        android:textSize="24sp"
        tools:text="Favorite Show" />

    <!--Movie/Show Description-->
    <TextView
        android:id="@+id/favOverview"
        android:layout_width="281dp"
        android:layout_height="118dp"
        android:layout_below="@+id/favTitle"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="-2dp"
        android:layout_toEndOf="@+id/profImage"
        android:text="TextView"
        tools:text="Description..." />

    <!--TODO: navigation bar goes at bottom of screen-->

</RelativeLayout>